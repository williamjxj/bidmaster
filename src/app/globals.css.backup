/* Custom scrollbar styles */
.scrollbar-thin {
  scrollbar-width: thin;
  scrollbar-color: hsl(var(--muted-foreground) / 0.3) transparent;
}

.scrollbar-thin::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

.scrollbar-thin::-webkit-scrollbar-track {
  background: transparent;
}

.scrollbar-thin::-webkit-scrollbar-thumb {
  background-color: hsl(var(--muted-foreground) / 0.3);
  border-radius: 9999px;
}

.scrollbar-thin::-webkit-scrollbar-thumb:hover {
  background-color: hsl(var(--muted-foreground) / 0.5);
}

/* Hide scrollbar but keep functionality */
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

/* Modern Fitness App Utility Classes */

/* Glass morphism effect */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.dark .glass {
  background: rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Enhanced gradient backgrounds */
.bg-gradient-success { background: var(--gradient-success); }
.bg-gradient-warning { background: var(--gradient-warning); }
.bg-gradient-danger { background: var(--gradient-danger); }
.bg-gradient-purple { background: var(--gradient-purple); }

/* Modern button styles */
.btn-fitness {
  background: var(--gradient-primary);
  border: none;
  border-radius: 0.75rem;
  padding: 0.75rem 1.5rem;
  color: white;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
}

.btn-fitness:hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
}

.btn-fitness:active {
  transform: translateY(0);
}

/* Modern input styles */
.input-fitness {
  border-radius: 0.75rem;
  border: 2px solid hsl(var(--border));
  padding: 0.75rem 1rem;
  transition: all 0.3s ease;
  background: hsl(var(--background));
}

.input-fitness:focus {
  border-color: hsl(var(--primary));
  box-shadow: 0 0 0 3px hsl(var(--primary) / 0.1);
  outline: none;
}

/* Progress bar enhancements */
.progress-fitness {
  height: 0.5rem;
  border-radius: 9999px;
  background: hsl(var(--muted));
  overflow: hidden;
}

.progress-fitness-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 9999px;
  transition: width 0.5s ease;
}

/* Modern badge styles */
.badge-fitness {
  border-radius: 9999px;
  padding: 0.25rem 0.75rem;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.badge-fitness-primary {
  background: var(--gradient-primary);
  color: white;
}

.badge-fitness-success {
  background: var(--gradient-success);
  color: white;
}

.badge-fitness-warning {
  background: var(--gradient-warning);
  color: white;
}

.badge-fitness-danger {
  background: var(--gradient-danger);
  color: white;
}

/* Mobile-first responsive utilities */
@media (max-width: 640px) {
  .mobile-padding {
    padding: 1rem;
  }

  .mobile-text-sm {
    font-size: 0.875rem;
  }

  .mobile-hidden {
    display: none;
  }
}

@media (min-width: 641px) {
  .desktop-only {
    display: block;
  }
}

@media (max-width: 640px) {
  .desktop-only {
    display: none;
  }
}

/* Touch-friendly interactive elements */
.touch-target {
  min-height: 44px;
  min-width: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Modern spacing utilities */
.space-fitness > * + * {
  margin-top: 1.5rem;
}

.space-fitness-sm > * + * {
  margin-top: 1rem;
}

.space-fitness-lg > * + * {
  margin-top: 2rem;
}

/* Enhanced focus states for accessibility */
.focus-fitness:focus {
  outline: 2px solid hsl(var(--primary));
  outline-offset: 2px;
}

/* Modern loading states */
.loading-fitness {
  position: relative;
  overflow: hidden;
}

.loading-fitness::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  animation: loading-shimmer 1.5s infinite;
}

@keyframes loading-shimmer {
  0% { left: -100%; }
  100% { left: 100%; }
}

/* Enhanced Fitness App Animations */

/* Breathe animation for interactive elements */
@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.animate-breathe {
  animation: breathe 2s ease-in-out infinite;
}

/* Floating animation for background elements */
@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* Gradient shift animation */
@keyframes gradient-shift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.animate-gradient {
  background-size: 200% 200%;
  animation: gradient-shift 3s ease infinite;
}

/* Success pulse animation */
@keyframes success-pulse {
  0% { 
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.7);
    transform: scale(1);
  }
  70% { 
    box-shadow: 0 0 0 10px rgba(34, 197, 94, 0);
    transform: scale(1.05);
  }
  100% { 
    box-shadow: 0 0 0 0 rgba(34, 197, 94, 0);
    transform: scale(1);
  }
}

.animate-success-pulse {
  animation: success-pulse 2s infinite;
}

/* Card hover lift animation */
@keyframes card-lift {
  0% { transform: translateY(0) scale(1); }
  100% { transform: translateY(-8px) scale(1.02); }
}

.card-hover-lift:hover {
  animation: card-lift 0.3s ease-out forwards;
}

/* Button press animation */
@keyframes button-press {
  0% { transform: scale(1); }
  50% { transform: scale(0.95); }
  100% { transform: scale(1); }
}

.animate-button-press:active {
  animation: button-press 0.1s ease-out;
}

/* Progress bar fill animation */
@keyframes progress-fill {
  0% { width: 0%; }
  100% { width: var(--progress-width, 100%); }
}

.animate-progress-fill {
  animation: progress-fill 1.5s ease-out forwards;
}

/* Icon spin animation for loading states */
@keyframes icon-spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.animate-icon-spin {
  animation: icon-spin 1s linear infinite;
}

/* Slide up animation for modals and dropdowns */
@keyframes slide-up {
  0% { 
    transform: translateY(100%);
    opacity: 0;
  }
  100% { 
    transform: translateY(0);
    opacity: 1;
  }
}

.animate-slide-up {
  animation: slide-up 0.3s ease-out;
}

/* Fade in animation */
@keyframes fade-in {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.animate-fade-in {
  animation: fade-in 0.5s ease-out;
}

/* Scale in animation */
@keyframes scale-in {
  0% { 
    transform: scale(0.8);
    opacity: 0;
  }
  100% { 
    transform: scale(1);
    opacity: 1;
  }
}

.animate-scale-in {
  animation: scale-in 0.3s ease-out;
}

/* Modern hover effects */
.hover-lift {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

.hover-glow {
  transition: all 0.3s ease;
}

.hover-glow:hover {
  box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
}

/* Mobile-specific animations */
@media (max-width: 768px) {
  .mobile-bounce {
    animation: bounce-light 0.6s ease-in-out;
  }

  .mobile-slide-in {
    animation: slide-in-up 0.4s ease-out;
  }
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
    letter-spacing: var(--tracking-normal);
  }
}